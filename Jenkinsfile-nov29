pipeline {
    agent any

    tools {
        maven "maven3.9.11"
        git   "git"               // âœ… Git tool added (must exist in Jenkins)
    }

    stages {

        stage('Clone from GitHub') {
            steps {
                sh "echo 'Cloning the latest application version...'"
                git branch: 'master', url: 'https://github.com/ejob13/liontech-online-library-web-app.git'
            }
        }

        stage('Test + Build') {
            steps {
                sh "echo 'Running JUnit test cases...'"
                sh "echo 'Tests must pass before packaging...'"
                sh "mvn clean package"
            }
        }

        stage('Code Quality') {
            steps {
                sh "echo 'Performing Code Quality Analysis...'"
                sh "mvn sonar:sonar"
            }
        }

        stage('Upload to Nexus') {
            steps {
                sh "mvn deploy"
            }
        }

        stage('Deploy to Production') {
            steps {
                deploy(
                    adapters: [
                        tomcat9(
                            alternativeDeploymentContext: '',
                            credentialsId: 'Tomcat-ID',
                            path: '',
                            url: 'http://98.94.9.160:8009/'
                        )
                    ],
                    contextPath: 'nov29',
                    war: 'target/*.war'
                )
            }
        }
    }

    post {
        always {
            emailext(
                body: '''Hey team,
Please check the build status.

Thanks,
LionTech
+1 437 215 2483''',
                recipientProviders: [buildUser(), developers()],
                subject: 'Build Status',
                to: 'paypal-team@gmail.com'
            )
        }

        success {
            emailext(
                body: '''Hey team,
Good job! Build and deployment were successful.

Thanks,
LionTech
+1 437 215 2483''',
                recipientProviders: [buildUser(), developers()],
                subject: 'Build SUCCESS',
                to: 'paypal-team@gmail.com'
            )
        }

        failure {
            emailext(
                body: '''Hey team,
Build failed. Please resolve the issues.

Thanks,
LionTech
+1 437 215 2483''',
                recipientProviders: [buildUser(), developers()],
                subject: 'Build FAILURE',
                to: 'paypal-team@gmail.com'
            )
        }
    }
}
